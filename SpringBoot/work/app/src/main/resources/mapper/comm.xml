<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.app.mapper.CommMapper">
  
    <!-- b_idx를 인자로 받아서 해당 b_idx를 참조하는 댓글들을 반환하는 select -->
    <!-- mybatis는 아래처럼 객체가 여러 개 나오면 리스트로 묶어서 보냄 -> bbs.xml에 resultMap이랑 같은 형태 -->
    <select id="commList" resultType="com.sist.app.vo.CommVO" parameterType="String">
        SELECT * FROM comment_t
        WHERE b_idx = #{idx}
    </select>

  <!-- 댓글 저장 -->
	<insert id="addComm" parameterType="com.sist.app.vo.CommVO">
		INSERT INTO comment_t(writer, content, pwd, write_date, ip, b_idx)
		VALUES (#{writer}, #{content}, #{pwd}, NOW(), #{ip}, #{b_idx})
	</insert>
    
</mapper>
