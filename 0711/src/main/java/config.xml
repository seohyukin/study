<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- DI(Dependence Injection): 의존성 주입 -->
	<!-- 의존성: 객체 안에 객체를 넣어준 것(TestVO라는 객체 안에 String msg라는 객체를 넣어줌) -->
	<bean id="t1" class="ex1.vo.TestVO"> <!-- TestVO t1 = new TestVO(); -->
		<property name="msg"> <!-- TestVO안에 멤버변수 중 msg라는 변수 -->
			<value>DI연습입니다.</value> <!-- t1.setMsg("DI연습입니다."); -->
		</property>
	</bean>
	
	<bean id="t2" class="ex1.vo.Test2VO">
	<!-- 멤버변수에 미리 값을 넣고 싶을 때 사용, 값을 넣고 싶지 않으면 property태그 안에 있는 부분 작성 X-->
<!-- 	<property name="str">
			<value>안녕하세요</value>
		</property>
		<property name="value">
			<value>1000</value>
		</property> -->
		<property name="str" value="안녕하세요"/>
		<property name="value" value="1000"/>
	</bean>
	
	<!-- jsp에 t3를 쓰지 않더라도 jsp에 BeanFactory bf = new ClassPathXmlApplicationContext("config.xml"); 부분에서 
		config.xml에 정의된 모든 bean들이 생성되므로 오류가 난다.-->
	<bean id="t3" class="ex1.vo.Test3VO"> <!-- 기본생성자 호출 -->
<!-- 	<property name="name" value="일지매"/> property(=SetterInjection): 이름이 name인 멤버변수의 setName을 호출해서 일지매를 인자로 줌
		<property name="age" value="22"/> Test3VO는 인자를 받는 생성자가 있으므로 기본 생성자가 만들어지지 않으므로 오류가 남
		<property name="live" value="true"/> -->
		<constructor-arg value="일지매" index="0"/> <!-- constructor-arg(=생성자Injection): 생성자의 인자를 주는 태그 -->
		<constructor-arg value="22" index="1" type="int"/> <!-- 인자의 순서와 태그의 순서가 같으면 index와 type은 기입할 필요 X -->
		<constructor-arg value="true" index="2"/>
	</bean>

	<!-- Test2VO를 참조하는 Test4VO를 생성하자 -->
	<bean id="t4" class="ex1.vo.Test4VO">
		<property name="test" ref="t2"/> <!-- setTest가 호출되고 t2라는 id를 가진 bean이 호출 -->
	</bean>

</beans>