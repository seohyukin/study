<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0726_secure.mapper.MemberMapper">
  
    <!--회원등록-->
    <insert id="reg" parameterType="com.sist.ex0726_secure.vo.MemVO">
        INSERT INTO member_t(m_id, m_pw, m_name) 
        VALUES(#{m_id}, #{m_pw}, #{m_name})
    </insert>

    <!--회원로그인-->
    <!-- pw는 암호화가 되어있으므로 mybatis에서 비교를 할 수 없으므로 id 하나만 받아오면 된다. 즉, parameterType을 map이 아닌 String으로 받아도 무방 -->
    <select id="login" parameterType="String" resultType="com.sist.ex0726_secure.vo.MemVO">
        SELECT * FROM member_t
        WHERE m_id = #{mid}
    </select>
</mapper>