<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- View Resolver설정 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="suffix" value=".jsp"/> <!-- 확장자 지정 -->
        <property name="prefix" value="/WEB-INF/jsp/"/> <!-- 위치 지정 -->
    </bean>

	<!-- AbstractController를 상속 받는 방법 -->
	<bean class="ex1.action.Test1Action" name="/t1.inc"/>
	
	<!-- Controller라는 인터페이스를 구현하는 방법 -->
	<!-- 브라우저에서 /t2.inc라고 호출하면 현재 날짜를 구하는 Test2Action이 구동되고 그 결과를 ex2.jsp로 표현되도록 하자 -->
	
	<bean class="ex1.action.Test2Action" name="/t2.inc"/>
	<!-- Controller라는 인터페이스를 구현하는 방법 -->
	<!-- 브라우저에서 /t3.inc라고 호출하면 v1이라는 인자를 하나 받고 v1이라는 인자가 admin이면 "관리자"를 그렇지 않으면 "회원"을 ex3.jsp로 표현되도록 하자 -->
	<bean class="ex1.action.Test3Action" name="/t3.inc"/>

	<!-- [가장 추천] @Controller를 사용하는 방법 -->
	<bean class="ex1.action.Test4Action"/>
	
</beans>