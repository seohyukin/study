<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0725_db.mapper.EmpMapper">
    <select id="all" resultType="com.sist.ex0725_db.vo.EmpVO">
        SELECT * FROM emp
    </select>

    <select id="list" resultType="com.sist.ex0725_db.vo.EmpVO" parameterType="Map">
		SELECT * FROM(
			SELECT @RN:=@RN+1 AS rnum, a.* FROM(
				SELECT * FROM emp
			) a, (select @RN:=0) b
		) c WHERE c.rnum BETWEEN #{begin} AND #{end}
	</select>

    <select id="search" resultType="com.sist.ex0725_db.vo.EmpVO" parameterType="map">
      SELECT * FROM emp
      <where>
        <choose>
          <when test="searchType == 0">
            empno = #{searchValue}
          </when>
          <when test="searchType == 1">
            ename LIKE CONCAT('%', #{searchValue}, '%')
          </when>
          <when test="searchType == 2">
            job LIKE CONCAT('%', #{searchValue}, '%')
          </when>
          <when test="searchType == 3">
            deptno = #{searchValue}
          </when>
			</choose>
      </where>
    </select>
</mapper>