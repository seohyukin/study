<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0726_secure.mapper.BbsMapper">
  
    <!-- 아래 list가 호출하는 복합결과 객체 -> 여기 올 때마다 BbsVO를 만들고 이들을 list로 묶어서 보내는 역할 -->
    <resultMap id="map1" type="com.sist.ex0726_secure.vo.BbsVO">
        <!-- property = 멤버변수 -->
        <id property="b_idx" column="b_idx"/>
        <!-- property: 멤버변수 | ofType: 수집물 종류 | select: ofType을 주는 곳(위치가 같으면 경로 생략하고 commList만 쓰기) -->
        <collection property="c_list" ofType="com.sist.ex0726_secure.vo.CommVO" select="commList" column="b_idx"/>
    </resultMap>

    <!--총 게시물의 수를 반환-->
    <select id="count" resultType="int" parameterType="Map">
        SELECT COUNT(*) FROM bbs_t
        <where>
            bname=#{bname} AND status = 0
            <if test="searchType != null and searchValue != null">
                <choose>
                    <when test="searchType == 0">
                        AND subject LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 1">
                        AND writer LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                    <when test="searchType == 2">
                        AND content LIKE CONCAT('%', #{searchValue}, '%')
                    </when>
                </choose>
            </if>
        </where>
    </select>

    <!--게시물 목록 반환-->
    <select id="list" resultMap="map1" parameterType="Map">
        SELECT * FROM (
            SELECT @RN:=@RN+1 AS rnum, a.* FROM (
                SELECT * FROM bbs_t
                <where>
                    bname=#{bname} AND status = 0
                    <if test="searchType != null and searchValue != null">
                        <choose>
                            <when test="searchType == 0">
                                AND subject LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                            <when test="searchType == 1">
                                AND writer LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                            <when test="searchType == 2">
                                AND content LIKE CONCAT('%', #{searchValue}, '%')
                            </when>
                        </choose>
                    </if>
                </where>
                ORDER BY b_idx DESC
            ) a, (SELECT @RN:=0) b
        ) c WHERE c.rnum BETWEEN #{begin} AND #{end}   
    </select>

    <!-- b_idx를 인자로 받아서 해당 b_idx를 참조하는 댓글들을 반환하는 select -->
    <!-- mybatis는 아래처럼 객체가 여러 개 나오면 리스트로 묶어서 보냄 -> bbs.xml에 resultMap이랑 같은 형태 -->
    <select id="commList" resultType="com.sist.ex0726_secure.vo.CommVO" parameterType="String">
        SELECT * FROM comment_t
        WHERE b_idx = #{idx}
    </select>
    
</mapper>